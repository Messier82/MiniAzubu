{
    "manifest_version": 2,
    "name": "Mini Azubu",
    "description": "Small, easy to use and minimalistic overview of games and streams.",
    "version": "0.1",
    "author": "Messier82",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action":  {
        "default_title": "Mini Azubu",
        "default_icon": "images/icon128.png",
        "default_popup": "main.html"
    },
    "permissions": [
        "tabs",
        "http://azubu.tv/*",
        "http://fonts.googleapis.com/",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}